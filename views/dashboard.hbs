{{> menu id="dashboard"}}

<div class="wrapper">
  <div class="card_body">
    <div class="card_top">
      <h3>Recommodations</h3>
    </div>
    <div class="pd20px">
      <table class="ui table">
        <thead>
          <tr>
            <th>Song</th>
            <th>Artist</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each recom.tracks}}
            <tr>
              <td>
                <a href="../song/{{./id}}">{{./name}}</a>
              </td>
              <td>
                <a href="../artist/{{./artists.[0].id}}">{{./artists.[0].name}}</a>
              </td>
              <td>
                <select>
                  {{#each ../playlists}}
                    <option value="{{./id}}">{{./title}}</option>
                  {{/each}}
                </select> 
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
