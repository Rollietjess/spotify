{{> menu id="search"}}

<div class="wrapper">
    <div class="card_body">
        <div class="card_top">
            <h3>Search</h3>
        </div>
        <div class="pd20px">
            <form action="/search/result" method="POST">
                <div class="ui input">
                    <input type="text" name="searchValue" id="searchValue" placeholder="Search...."> 
                </div>
                <button class="ui blue submit button">Search</button>
            </form>
        </div>
    </div>
    <div class="ui grid">
        <div class="two column row">
            <div class="column">
                <div class="card_body">
                    <div class="card_top">
                        <h3>Songs</h3>
                    </div>
                    <div class="pd20px">
                        {{#each tracks}}
                            <div class="related">
                                <a href="../song/{{id}}" class="ui label related_label">
                                    <i class="music icon"></i>
                                    {{name}}
                                    <div class="detail">{{artists.[0].name}}</div>
                                </a>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="card_body">
                    <div class="card_top">
                        <h3>Artists</h3>
                    </div>
                    <div class="pd20px">
                        {{#each artists}}
                            <div class="related">
                                <a href="../artist/{{id}}" class="ui image label related_label">
                                    <img src="{{images.[1].url}}">
                                    {{name}}
                                </a>
                            </div>
                        {{/each}}
                    </div>
                </div> 
            </div>
        </div>
    </div>


</div>